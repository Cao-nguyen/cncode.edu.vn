<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Update User</title>
</head>

<body>
    <div class="container">
        <form method="POST" action="/users/update-user">
            <input hidden value="<%= userData.id %>" name="id">
            <div class="mb-3 col-6 mt-3">
                <label for="email" class="form-label">Nhập Email:</label>
                <input type="email" value="<%= userData.email %>" name="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3 col-6 mt-3">
                <label for="username" class="form-label">Tên đăng nhập:</label>
                <input type="text" value="<%= userData.username %>" name="username" class="form-control" id="username"
                    required>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>